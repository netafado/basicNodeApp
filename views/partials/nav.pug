nav.black.darken-4(role="navigation")
    nav-wrapper.container
        a(href="#", id="logo-container", class="brand-logo", style="padding: 8px 15px")
            img(src="/img/logo-branco.png", alt="Logo Nodeapp", class="responsive-img", style="max-width:250px")
        ul.right.hide-on-med-and-down
            // Se o user estiver logado mostrar esses links
            if currentUser
                each link in _APP_INFO.logInlinks
                    li                
                        a(href=link.link) #{link.name}
            else
                 each link in _APP_INFO.logOutlinks
                    li                
                        a(href=link.link) #{link.name}           
        
        ul#nav-mobile.side-nav
            li
                if currentUser
                    each link in _APP_INFO.logInlinks
                        a(href=link.link) #{link.name}
                else
                    each link in _APP_INFO.logOutlinks
                        li                
                            a(href=link.link) #{link.name}  
        a(href="#",data-activates="nav-mobile", class="button-collapse")
            i.material-icons M
